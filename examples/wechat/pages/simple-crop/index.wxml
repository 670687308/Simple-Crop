<view id="simple_crop" class="crop-whole-cover" style="z-index:{{zIndex}}">
  <view class="crop-component">
    <view class="crop-mask">
      <image class="crop-content" style="{{cropContentStyle}}" src="{{src}}"></image>
      <canvas type="2d" class="crop-cover"></canvas><!-- canvas-id 和 type 属性冲突且没办法使用 createSelectorQuery -->
    </view>
    <view wx:if="{{rotateSlider}}" class="crop-rotate">
      <scroll-view scroll-x="true">
        <view class="lineation" style="width:{{lineationItemWidth * ((endAngle - startAngle) / gapAngle + 1)}}px;">
          <view wx:key="*this" wx:for="{{lineationArr}}" wx:for-index="idx" wx:for-item="item">
            <view class="number">{{item}}</view>
            <view class="bg"></view>
          </view>
        </view>
      </scroll-view>
      <view class="current"></view>
    </view>
    <view class="crop-btns">
      <view class="crop-close"></view>
      <view class="crop-around"></view>
      <view class="crop-reset"></view>
      <view class="crop-btn"></view>
    </view>
  </view>
</view>